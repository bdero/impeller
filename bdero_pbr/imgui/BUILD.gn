  name = "imgui_shaders"
  shaders = [
    "imgui_raster.vert",
    "imgui_raster.frag",
  ]
}

source_set("imgui") {
  include_dirs = [
    ".",
    "//third_party/glfw/include",
  ]

  sources = [
    "imconfig.h",
    "imgui.cpp",
    "imgui.h",
    "imgui_draw.cpp",
    "imgui_internal.h",
    "imgui_tables.cpp",
    "imgui_widgets.cpp",
    "imstb_rectpack.h",
    "imstb_textedit.h",
    "imstb_truetype.h",
  ]
}

source_set("glfw") {
