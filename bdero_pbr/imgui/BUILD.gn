  public_deps = [
    ":imgui",
    ":imgui_shaders",
  ]

  deps = [ "//flutter/impeller/renderer" ]

  sources = [
    "imgui_impl_impeller.cc",
    "imgui_impl_impeller.h",
  ]
}
source_set("demo") {
  deps = [ ":imgui" ]

  sources = [ "imgui_demo.cpp" ]
}
